<%- include('header.ejs') %>
<main id="main" class="main">      

    <div class="pagetitle">
      <h1>Add Slider</h1> 
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/index">Home</a></li>
          <li class="breadcrumb-item active">Add Slider</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Add Slider Details</h5>
    
                  <!-- General Form Elements -->
                  <form  id="slider_form">
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-2 col-form-label">Image</label>
                      <div class="col-sm-10">
                        <input type="file" class="form-control" name="img" id="img">
                      </div>
                    </div>

            
                    <div class="row mb-3">
                      <label class="col-sm-2 col-form-label"></label>
                      <div class="col-sm-10">
                        <button type="button" onclick="add_details()" class="btn btn-primary">Add slider</button>
                      </div>
                    </div>
    
                  </form><!-- End General Form Elements -->
    
                  <% if(result=="success"){%>
                    <div class="alert alert-success">
                      <strong>Success!</strong> Data addedd successfully.
                    </div>                     
                  <% } %>  

                </div>
              </div>           

        </div>
    </section>

</main>


<%- include('footer.ejs') %>